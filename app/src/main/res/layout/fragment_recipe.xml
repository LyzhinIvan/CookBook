<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cookbook.fragments.RecipeFragment"
    android:layout_margin="10dp">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_placeholder"
        android:id="@+id/ivIcon"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ivIcon"
        android:layout_marginLeft="5dp"
        android:layout_alignBaseline="@id/ivIcon"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Название блюда"
            android:layout_marginTop="40dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:maxLines="2"
            android:id="@+id/tvCaption" />

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSatiety"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сытность"/>

            <TextView
                android:id="@+id/tvCookingTime"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40 мин"/>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvIngredients"
        android:layout_below="@id/ivIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Что потребуется?"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_below="@id/tvIngredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="LinearLayoutManager"
        tools:listitem="@layout/recipe_ingredient_item">
    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/tvCaption"
        android:layout_below="@id/recyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Как приготовить?"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <TextView
        android:id="@+id/tvRecipe"
        android:layout_below="@id/tvCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lorem"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

</RelativeLayout>
</android.support.v4.widget.NestedScrollView>